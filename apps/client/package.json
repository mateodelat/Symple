    "start": "next start",
    "clean": "rm -rf dist",
    "lint": "npm run clean & ts-standard"
  },
  "dependencies": {
    "@types/node": "20.4.1",
    "@types/react": "18.2.14",
    "@types/react-dom": "18.2.6",
